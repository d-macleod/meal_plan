<div class="title-container">
  <h1>Recipes</h1>
  <%= link_to "New Recipe", new_recipe_path, class: "btn btn-info" %>
</div>

<div class="recipes">
    <% @recipes.each do |recipe| %>
      <div class="recipe">
        <div class="media">
          <div class="media-body">
            <h3 class="recipe-name"><%= link_to truncate(recipe.name), recipe_path(recipe) %></h3>
            <p><%= truncate(recipe.description, length: 150) %></p>
            <p>
              <%= link_to "Edit", edit_recipe_path(recipe), class: "btn btn-secondary" %>
              <%= link_to "Delete", recipe_path(recipe), data: {
                confirm: "Are you sure you want to delete: #{recipe.name}?",
                }, method: :delete, class: "btn btn-danger" %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
</div>